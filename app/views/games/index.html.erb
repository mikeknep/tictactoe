<h2>Your Games</h2>

<ul>
  <% @games.each do |game| %>
    <li><%= link_to "#{game.user.username} vs. Computer - #{game.status.titleize}", game_path(game) %></li>
  <% end %>
</ul>


<h2>New Game</h2>

<div class="col-md-2">
  <%= form_for :game, url: games_path, method: :post do |f| %>
    <%= f.submit "Play as X", class: 'btn btn-success' %>
  <% end %>
</div>

<div class="col-md-2">
  <%= form_for :game, url: games_path, method: :post do |f| %>
    <%= f.submit "Play as O", class: 'btn btn-success' %>
  <% end %>
</div>
