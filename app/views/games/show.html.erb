<% if @game.status == 'in_progress' %>
  <h1>Let's Play Tic-Tac-Toe!</h1>
<% else %>
  <h1>Game over!</h1>
<% end %>

<div class="gameboard clearfix">
  <% 1.upto(9) do |i| %>
    <div class="<%= square_class(i) %>"><%= spot_status(i) %></div>
  <% end %>
</div>

<br>

<%= link_to 'Back', games_path, class: 'btn btn-primary' %>
<%= link_to 'Delete', game_path(@game), method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this game?' } %>

<br>

<% if @game.status == "draw" || @game.status == "loss" %>
  <h3>Play again?</h3>
  <div class="col-md-2">
    <%= form_for :game, url: games_path, method: :post do |f| %>
      <%= f.submit "Play as X", class: 'btn btn-success' %>
    <% end %>
  </div>

  <div class="col-md-2">
    <%= form_for :game, url: games_path, method: :post do |f| %>
      <%= f.submit "Play as O", class: 'btn btn-success' %>
    <% end %>
  </div>
<% end %>
