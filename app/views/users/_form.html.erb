<%= form_for(@user, html: { class: "form-horizontal" }) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@user.errors.count, "error") %> prevented this user from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset class="row">
    <div class="field col-md-6">
      <%= f.label :username %>
      <%= f.text_field :username, :class => "form-control input-lg" %>
    </div>
  </fieldset>

  <fieldset class="row">
    <div class="field col-md-6">
      <%= f.label :password %>
      <%= f.password_field :password, :class => "form-control input-lg" %>
    </div>
    <div class="field col-md-6">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, :class => "form-control input-lg" %>
    </div>
  </fieldset>

  <br>

  <fieldset class="row">
    <div class="field col-md-6">
      <%= f.submit "Submit", class: 'btn btn-success' %>
    </div>
  </fieldset>

<% end %>
