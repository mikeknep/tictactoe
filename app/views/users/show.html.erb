<h1>Profile</h1>

<p>Username: <%= @user.username %></p>
<p>Unfinished games: <%= @user.games.where(status: 'in_progress').count %></p>
<p>Losses: <%= @user.games.where(status: 'loss').count %></p>
<p>Draws: <%= @user.games.where(status: 'draw').count %></p>

<p><%= link_to "Edit Account", edit_user_path(@user), class: 'btn btn-warning' %></p>
<p><%= link_to "Delete Account", @user, method: :delete, data: { confirm: "Are you sure you want to delete your account?" }, class: 'btn btn-danger' %></p>
